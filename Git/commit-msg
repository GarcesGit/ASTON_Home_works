#!/usr/bin/env node

const fs = require("fs");
const conventionalCommitMessage = /ASTONJS-1\s(chore|feat|fix):\s.+/g;
let exitCode = 0;
const commitMsgFile = process.argv[2];
const message = fs.readFileSync(commitMsgFile, "utf8");
const isValid = conventionalCommitMessage.test(message);

if (!isValid) {
    console.log(
        'Cannot commit: the commit message does not comply with conventional commits standards. Please, use this standard: "ASTONJS-1 tipe: description"'
    );
    exitCode = 1;
}

process.exit(exitCode);
